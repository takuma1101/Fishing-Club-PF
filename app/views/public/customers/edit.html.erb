<% if flash[:notice] %>
 <p id=notice><%= flash[:notice] %></p>
<% end %>

<div class="container mt-4">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2 class="mt-3">プロフィール編集</h2>
     <%= form_with model: @customer, url: public_customer_path(current_customer) do |f| %>
     <%= render 'public/fishs/error', model: @customer %>
      <div class="form-group">
        <label for="user_name">ユーザー名</label>
         <%= f.text_field :user_name, class: "form-control user_name" %>
      </div>
     <div class="form-group">
        <label for="user_image">プロフィール画像</label>
         <%= f.file_field :profile_image, class: "form-control-file user_image", accept: "image/*" %>
      </div>
      <div class="form-group">
        <label for="user_introduction">自己紹介</label>
         <%= f.text_area :introduction, class: "form-control introduction"  %><br>
      </div>
      <div class="form-group">
        <%= f.submit " Update User", class: "btn btn-secondary"  %>
      </div>
<% end %>  </div>
</div>

      </div>