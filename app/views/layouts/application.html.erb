<!DOCTYPE html>
<html>
  <head>
    <title>FishingClub</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar">

        <div class="container mt-2 mb-2">
          <a href="/">Logo</a>
          <%= render 'public/fishs/search', fish: @fishs%>
          <nav>
            <ul class="nav">
              
                   <% if customer_signed_in? %>
                  <li><%= link_to 'マイページ', public_customer_path(current_customer), {class: "btn btn-outline-dark mr-3"} %></li>
                  <li><%= link_to 'ログアウト', destroy_customer_session_path, method: :delete, class: "btn btn-outline-dark mr-3" %></li>
                  <li><%= link_to '投稿一覧', public_fishs_path, class: "btn btn-outline-dark mr-3" %></li>
                  <li><%= link_to 'ユーザー一覧', public_customers_path, class: "btn btn-outline-dark mr-3" %></li>
            <% elsif admin_signed_in?%>
                  <li><%= link_to ' 会員一覧', admin_customers_path, {class: "btn btn-outline-dark mr-3"} %></li>
                  <li><%= link_to ' ログアウト', destroy_admin_session_path, method: :delete, class: "btn btn-outline-dark mr-3" %></li>
             <% else %>
                  <li><%= link_to "新規登録",  new_customer_registration_path, {class: "btn btn-outline-dark mr-3"}  %></li>
                  <li><%= link_to  "ログイン", new_customer_session_path, {class: "btn btn-outline-dark mr-3"} %></li>
            <% end %>
            </ul>
          </nav>
          </div>
    </header>
    <main>
    <%= yield %>
    </main>
    <footer>
      <br>
      <br>
    </footer>
  </body>
</html>
